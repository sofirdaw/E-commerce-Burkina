{
  "name": "ecomm-burkina",
  "version": "1.0.0",
  "private": true,
  "description": "E-commerce platform for Burkina Faso - Premium multiplatform application",
  "author": {
    "name": "August",
    "email": "sofirdaw@gmail.com"
  },
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@9.15.0",
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "clean": "turbo run clean && rm -rf node_modules",
    "db:generate": "cd packages/database && pnpm prisma generate",
    "db:push": "cd packages/database && pnpm prisma db push",
    "db:studio": "cd packages/database && pnpm prisma studio",
    "db:migrate": "cd packages/database && pnpm prisma migrate dev",
    "db:seed": "cd packages/database && pnpm tsx seed.ts",
    "db:seed-products": "cd packages/database && pnpm tsx seed-products.ts",
    "type-check": "turbo run type-check"
  },
  "devDependencies": {
    "@turbo/gen": "^2.3.3",
    "ngrok": "5.0.0-beta.2",
    "prettier": "^3.4.2",
    "turbo": "^2.3.3",
    "typescript": "^5.7.2"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "@types/nodemailer": "^7.0.9",
    "nodemailer": "^8.0.0",
    "resend": "^6.9.1"
  }
}
